    <div class="container min-vh-100">
      <div class="d-flex justify-content-center align-items-center min-vh-100 flex-column">
        <h1>Update Post</h1>
        <form action="/updatepost/<%= post.id %>?_method=PUT" method="POST">
          <div class="mb-3">
            <textarea class="form-control" placeholder="Write a new post." id="content" style="height: 100px" name="content"><%= post.content %></textarea>
            <label for="content"></label>
          </div> 
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

