  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-5">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"><img src="/img/default.png" alt="" width="70" /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav justify-content-around" style="width: 100%">
            <a class="nav-link text-center fw-bold" href="/posts/createpost">New Post</a>
            <a class="nav-link text-center fw-bold" href="/posts">Posts</a>
            <a class="nav-link text-center fw-bold" href="/profiles">Show Profiles</a>
            <% if(!currentUser){ %>
            <a class="nav-link text-center fw-bold" href="/user/register">Register</a>
            <a class="nav-link text-center fw-bold" href="/user/login">Login</a>
            <% } %> <% if(currentUser && hasProfile){ %>
            <a class="nav-link text-center fw-bold" href="/profiles/createprofile">Create Profile</a>
            <% } %> <% if(currentUser){ %>
            <a class="nav-link text-center fw-bold text-capitalize" href="/user"><%= currentUser.username %></a>
            <a class="nav-link text-center fw-bold text-danger" href="/user/logout">Logout</a>
            <% } %>
          </div>
        </div>
      </div>
    </nav>
    <div class="container min-vh-100">

